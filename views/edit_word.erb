<h1>Update <%= @word.word %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="edit_word">update word</label>
  <input id="edit_word" name="edit_word" type="text">

  <button type="submit" class="btn btn-success">Update</button>
</form>

<p><a href="/words">Return to word list</a></p>


<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit" class="btn btn-danger">Delete word</button>
</form>
