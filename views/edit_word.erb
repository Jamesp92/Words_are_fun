<h1>Update <%= @word.word %></h1>

<form action="/words/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="word">update word</label>
  <input id="word" name="word" type="text">

  <button type="submit" class="btn btn-success">Update</button>
</form>

<p><a href="/words">Return to word list</a></p>

<form action="/word/<%= @word.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <label for="word">delete word</label>
  <input id="word" name="word" type="text">

  <button type="submit" class="btn btn-danger">Delete</button>
</form>
